{
    "name": "@kodai-yamamoto-siw/workspace-launch-server",
    "version": "0.1.0",
    "description": "Backend server for Workspace Launch by Link assignments",
    "license": "MIT",
    "type": "commonjs",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "files": [
        "dist",
        "templates",
        "README.md"
    ],
    "bin": {
        "workspace-launch-server": "./dist/workspace-launch-server"
